# ===== Discord Bot Configuration =====
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ===== AI Configuration =====
# Google Gemini 2.5 Pro API
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ===== Notion Integration =====
NOTION_API_TOKEN=your_notion_integration_token_here
NOTION_CALENDAR_DATABASE_ID=your_calendar_database_id_here
NOTION_TODO_DATABASE_ID=your_todo_database_id_here

# ===== Apple/macOS Configuration =====
APPLE_MCP_SERVER_URL=http://localhost:3000

# ===== Database Configuration =====
DATABASE_URL=sqlite:///data/personal_ai_assistant.db
VECTOR_DB_PATH=data/chroma_db

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/personal_ai_assistant.log
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===== Application Configuration =====
DEBUG=false
ENVIRONMENT=production

# ===== Process Management =====
PID_FILE_PATH=personal_ai_assistant.pid
DAEMON_USER=your_username
DAEMON_GROUP=your_group

# ===== API Rate Limiting =====
GEMINI_API_RATE_LIMIT=60  # requests per minute
NOTION_API_RATE_LIMIT=3   # requests per second
WEB_SCRAPING_DELAY=1      # seconds between requests

# ===== Memory Management =====
MAX_MEMORY_USAGE=500      # MB
MEMORY_CLEANUP_INTERVAL=3600  # seconds (1 hour)

# ===== Security =====
ALLOWED_USER_IDS=your_discord_user_id_here
ADMIN_USER_IDS=your_admin_discord_user_id_here
